{
    QString line1 = "Easy", line2 = "Medium", line3 = "Hard", line4 = "Impossible";
    QPushButton* easy = new QPushButton(line1), *medium = new QPushButton(line2), *hard = new QPushButton(line3), *impossible = new QPushButton(line4);
    easy->setStyleSheet(
        "QPushButton {"
        "    background-color: #4CAF50;"
        "    color: white;"
        "    font-size: 22px;"
        "    border-radius: 15px;"
