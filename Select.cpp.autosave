        );
    medium->setStyleSheet(
        "QPushButton {"
        "    background-color: #FFA726;"
        "    color: white;"
        "    font-size: 22px;"
        "    border-radius: 15px;"
        "    padding: 8px;"
        "}"
        "QPushButton:hover {"
        "    background-color: #FFB74D;"
        "}"
        "QPushButton:pressed {"
        "    background-color: #FB8C00;"
        "}"

        );
    hard->setStyleSheet(
